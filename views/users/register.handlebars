<div class="row">
    <div class="col-md-6 offset-3 card card-body mt-5">
        <h1 class="mt-3 mb-3 text-center">Register</h1>
        <form action="/users/register" method="post">
            <label for="name">Name</label>
            <input type="text" name="name" value="{{user.name}}" id="" class="form-control">
            <label for="email">Email</label>
            <input type="email" value="{{user.email}}" name="email" class="form-control">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control">
            <label for="confirm">Confirm Password</label>
            <input type="password" name="confirm" class="form-control">
            <button type="submit" class="btn btn-primary mt-2">Register</button>
        </form>
        {{#each errors}}
            <div class="alert alert-danger mt-4">{{text}}</div>
        {{else}}

        {{/each}}

        {{#if error}}
            <div class="alert alert-danger text-center mt-3">{{error}}</div>
        {{/if}}
    </div>
</div>