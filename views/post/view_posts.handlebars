

<div class="container">
    <h1 class="mb-5 mt-5">Post List</h1>
    {{#each post}}
    <div class="row">  
        <div class="col-md-12">    
            <div class="col-md-6 col-lg-12 mx-auto card card-body mb-4">
                <h4>{{title}}</h4>
                <small>{{category}}</small>
                <p class="lead mb-4">{{content}}</p>
                <div>
                    <a style="width:50%; float:left;" href="/post/edit/{{id}}" class=" btn btn-primary">Edit</a>
                    <form action="/post/{{id}}?_method=DELETE" method="post" style="width:50%;margin-top: 0 !important" class="mt-2 ml-auto">
                        <input type="hidden" name="_method" value="delete">
                        <button type="submit" class="form-control btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{else}}
            <span class="lead"> No posts available</span>
            <a class="lead" href="/post/add">Add new</a> 
    {{/each}}
</div>