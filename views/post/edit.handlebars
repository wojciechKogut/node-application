<h1 class="mb-4">Edit Post</h1>

<div class="container">
    <div class="row mb-3">
        <div class="col-md 6">
            <form action="/post/{{post.id}}?_method=PUT" method="post">
            <input type="hidden" name="_method" value="PUT">
                <label for="title">Title</label>
                <input type="text" name="title" value="{{post.title}}" class="mb-4 form-control">
                <label for="category">Category</label>
                <input type="text" value="{{post.category}}" name="category" id="" class="mb-4 form-control">
                <label for="content">Body</label>
                <textarea class="mb-4 form-control" name="content" id="" cols="30" rows="10">{{post.content}}</textarea>
                <button type="submit" class="btn btn-success mt-3">Edit</button>
            </form>
        </div>
    </div>
    {{#each errors}}
    <div class="col-md-6 alert alert-danger">
        <span class="">{{text}}</span>
    </div>
    {{/each}}
</div>